<p id="notice"><%= notice %></p>
<% provide(:title, @user.name) %>
<div class="userwrap">
<div class="userbanner">
  <div id = "namecontainer">
        <%= @user.name %>
  </div>
          <p>
            <%= image_tag @user.image.url(:thumb) %>
          </p>
          <p>
        <section>
        <h3>
        <%= gravatar_for @user %>
        <%= @user.name %>
        (Pup User)
        </h3>
      </section>
            <strong>Name:</strong>
            <%= @user.name %>
          </p>

          <p>
            <strong>Email:</strong>
            <%= @user.email %>
          </p>
            <%= link_to 'Edit', edit_user_path(@user) %> |
            <%= link_to 'Back', users_path %>
  </div>
  <div id="abovedees">
  </div>
        <div class="userdogs">
        <% if @user.dogs.any? == false %>
          <div class="newdogbutton">
              <%= link_to image_tag("/images/greenadd.png"), new_dog_path %>
              <h1> Add A New Dee!! </h1>
          </div>
          <% end %>
            <% @user.dogs.each do |dog| %>
            <div class="userdog">
              <div class="userdogpic">
             <%= image_tag @dog.image.url(:medium) %> 
              </div>
              <div class="dogtable">
                  <tr class ="odd"> 
                      <td class ="label"> Dee Name:  </td>
                      <td class ="response"> <%= link_to dog.name, dog %> </td>
                  </tr>
                  <tr class ="even"> 
                      <td class ="label"> Dee Nick:  </td>
                      <td class ="response"> <%= dog.nick %> </td>
                  </tr>
                  <tr class ="odd"> 
                      <td class ="label"> Dee Breed:  </td>
                      <td class ="response"> <%= dog.primarybreed %> </td>
                  </tr>
                  <tr class ="even"> 
                      <td class ="label"> Secondary Breed:  </td>
                      <td class ="response"> <%= dog.secondarybreed  %> </td>
                  </tr>
                  <tr class ="odd"> 
                      <td class ="label"> Dee Age:  </td>
                      <td class ="response"> <%= dog.age %> Years Old! </td>
                  </tr>
                  <tr class ="even"> 
                      <td class ="label"> Dog Weight:  </td>
                      <td class ="response"> <%= dog.weight  %> El Bees </td>
                  </tr>
          
            <p> <b> Age: </b> <%=  dog.age %> </p>
            <p> <b> Weight: </b> <%=  dog.weight %> </p>
            <%= link_to 'Delete Dee', dog, method: :delete, data: { confirm: 'Are You Sure You Want To Delete This Dee!?' } %>
            <td><%= link_to 'Change Dee Info', edit_dog_path(dog) %></td>
             </div>
             </div>
            <% end %> 
          <hr>
          <% if @user.dogs.any? %>
           <div class="newdogbutton">
              <%= link_to image_tag("/images/greenadd.png"), new_dog_path %>
              <h1> Add A New Dee!! </h1>
            <% end %>
      </div>
    </div>
    <% if @user.dogs.any? == false %>
  <div id="nodogheader">
    <h2> You Don't Have Any Dees Yet!! <h2>
  </div>
  <% end %>



 </div>
</div>

