<% provide(:title, "Edit user") %>
<h1>Update your profile</h1>

  <div class="row">
    <div class="span6 offset3">
      <div class="form-container">
      <%= form_for(@user) do |f| %>
        <%= render 'shared/error_messages' %>

        <%= f.label :name %>
        <%= f.text_field :name %>

        <%= f.label :email %>
        <%= f.text_field :email %>

        <%= f.label :password %>
        <%= f.password_field :password %>

        <%= f.label :password_confirmation, "Confirm Password" %>
        <%= f.password_field :password_confirmation %>
    
        <%= f.label :city_id %>
        <%= f.collection_select :city_id, City.order(:id), :id, :name, include_blank: true %>

        <%= f.label :burrough_id %>
        <%= f.collection_select :burrough_id, Burrough.order(:id), :id, :name, include_blank: true %>
        
        <%= f.label :hood_id %>
        <%= f.collection_select :hood_id, Hood.order(:id), :id, :name, include_blank: true %>
        
        <%= f.label :image %>
         <%= f.file_field :image %>
        <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
      <% end %>
     </div>
    </div>
  </div>